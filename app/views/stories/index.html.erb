<section class="section">
  <div class="container">
    <div class="columns">
      <% @stories.each do |story| %>
        <div class="column">
          <div class="message is-medium main-story">
            <header class="message-header">
              <p class="message-header-title">
                <%= story.snipped_title %>               
              </p>
              <%= link_to story_arcs_path(story), class: "button is-outlined is-info" do %>
                <%= story.arcs.count %>
                <%= 'Arc'.pluralize(story.arcs.count) %>
              <% end %>
            </header>
            <%= link_to story_path(story), class: "has-text-dark" do %>
              <div class="message-body index-story">
                <p>"
                  <%= story.snipped_body %>"
                </p>
                <br>
              </div>
              <span class="is-italic is-pulled-right">
                -- Submitted by:
                <%= story.display_username %>
              </span>
              <% end %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</section>