<section class="section">
  <div class="container">
    <div class="message">
      <header class="message-header">
        <p class="message-header-title">
          <%= @story.title %>
        </p>
        <%= link_to "Submit A Story Arc", new_story_arc_path(story_id: @story.id), class: "button is-outlined is-light" %>
      </header>
      <div class="message-body">
        <p>"
          <%= @story.snipped_body %>"
        </p>
        <br>
      </div>
      <span class="is-italic is-pulled-right">
        -- Submitted by:
        <%= @story.display_username %>
      </span>
    </div>
    <br>
    <br>
    <div class="columns">
      <% @arcs.each do |arc| %>
        <div class="column">
          <div class="message">
            <header class="message-header">
              <p class="message-header-title">
                -- Submitted by:
                <%= arc.display_username %>
              </p>
            </header>
            <div class="message-body index-story">
              <p>"
                <%= arc.snipped_body %>"
              </p>
              <br>
            </div>
          </div>
        </div>
        <% end %>
    </div>
    <%= link_to "Top", '#logo', class: "button is-outlined is-dark" %>
  </div>
</section>