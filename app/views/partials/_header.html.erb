<div class="container">
  <h1 id="logo" class="has-text-centered">Adventure Time!</h1>
  <div class="has-text-centered">
    <%= link_to "Create a New Story!", new_story_path, class: "button is-outlined is-dark" %>
      <% if !user_signed_in? %>
        <%= link_to "Sign in", new_user_session_path, class: "button is-inverted is-dark" %>
      <% else %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "button is-outlined is-danger" %>
      <% end %>
  </div>
</div>