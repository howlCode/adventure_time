<section class="section">
  <div class="container">
    <article class="message">
      <div class="message-header">
        <p>
          <%= @story.title %>
        </p>
      </div>
      <div class="message-body">
        <%= @story.body %>
        <span class="is-italic is-pulled-right">
          --
          <%= @story.display_username %>
        </span>
      </div>
    </article>
  </div>
</section>